<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.env.widget.envawidget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
         >
        <receiver android:name="com.env.widget.envawidget.EnvWidget" >
            <intent-filter>
                
                 <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    			<action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
    			<action android:name="android.appwidget.action.APPWIDGET_DELETED" />
    			<action android:name="android.appwidget.action.APPWIDGET_DISABLED" /> 
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/env_widget" />
        </receiver>

        
         <!-- Service to perform web API queries -->
        <service android:name="com.env.widget.envawidget.EnvWidget$UpdateService" />
        
        <activity android:label="@string/app_name" android:name="EnvActivity"  android:theme="@android:style/Theme.Dialog" android:excludeFromRecents="true" >
            <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
    </intent-filter>
    </activity>
    </application>

</manifest>
