<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tempIconView"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
        />
 <TextView
     android:id="@+id/tempString"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:gravity="center"
		android:textSize="15sp"
    	android:layout_marginRight="5dip"
		android:layout_below="@+id/tempIconView"
		android:layout_toLeftOf="@+id/humidityIconView"
        android:text="@string/temperature"
         />
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:padding="4dip"
        android:gravity="center"
		android:textSize="25sp"
		android:layout_toRightOf="@+id/tempIconView"
        android:text="@string/widget_loading"
         />
   
<ImageView
        android:id="@+id/humidityIconView"
       android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
    android:layout_toRightOf="@+id/temp"
       />
<TextView
    
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:gravity="center"
		android:textSize="15sp"
		android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
		android:layout_below="@+id/humidityIconView"
		android:layout_toRightOf="@+id/tempString"
        android:text="@string/humidity"
         />
<TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:padding="4dip"
        android:gravity="center"
        android:layout_toRightOf="@+id/humidityIconView"
        android:textSize="25sp"
        android:text="@string/widget_loading"
         />
</RelativeLayout>
 